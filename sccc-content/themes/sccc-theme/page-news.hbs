{{!< default}}
<div class="row">
  <div class="news-box">
    <div class="col-lg-12">
      <h4>
        News & Events
      </h4>
      <div class="row">
        {{#get "posts"}}
          {{#foreach posts}}
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
              <div class="thumb-pad1">
                <div class="thumbnail">
                  <figure>
                    <img src="{{feature_image}}" />
                  </figure>
                  <div class="caption">
                    <p class="title">
                      {{title}}
                    </p>
                    <p>
                      {{excerpt characters="85"}}
                      ...
                      <a href="{{url}}">
                        {{date updated_at format="MMMM DD, YYYY"}}
                      </a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          {{/foreach}}
        {{/get}}
      </div>
    </div>
  </div>
</div>