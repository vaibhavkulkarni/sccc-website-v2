{{#get "posts" filter="primary_tag:News" limit="all" include="tags,authors" as |post|}}
    <div class="gh-outer">
      <section class="featured-wrapper gh-inner">
          <h2 class="featured-title">Club News</h2>
          <div class="featured-feed">
              {{#foreach post}}
              <article class="{{post_class}}">
                  <div class="u-placeholder horizontal">
                      {{#if feature_image}}
                          <img
                              class="u-object-fit"
                              srcset="{{> "srcset"}}"
                              sizes="(min-width: 1256px) calc((1130px - 60px) / 3), (min-width: 992px) calc((90vw - 60px) / 3), (min-width: 768px) calc((90vw - 30px) / 2), 90vw"
                              src="{{img_url feature_image size="m"}}"
                              alt="{{title}}"
                              loading="lazy"
                          >
                      {{/if}}
                  </div>
                  <h3 class="post-title">{{title}}</h3>
                  <a class="u-permalink" href={{url}} aria-label="{{title}}"></a>
              </article>
              {{/foreach}}
          </div>
      </section>
    </div>
{{/get}}