{{!< default}}

<div class="container">
  <div class="row">
    <div class="news-box">
      <div class="col-lg-12">
        <h4>
          Club news
        </h4>
        <div class="row">
          {{#foreach posts limit="4"}}
            {{#match primary_tag.name "News"}}
              {{> "news"}}
            {{/match}}
          {{/foreach}}
        </div>
      </div>
    </div>
    <div class="clearfix topic-box">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <h4>
          Achievements
        </h4>
        <ul class="list2">
          {{#foreach posts limit="4"}}
              {{#match primary_tag.name "Achievements"}}
                  {{> "achievements"}}
              {{/match}}
          {{/foreach}}
        </ul>
        <a href="#" class="btn-default btn1">
          view all
          <span class="fa fa-angle-right"></span>
        </a>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <h4>
          Recent successes
        </h4>
        <div class="thumb-pad2">
          <div class="thumbnail">
            {{#foreach posts limit="4"}}
                {{#match primary_tag.name "Successes"}}
                    {{> "successes"}}
                {{/match}}
            {{/foreach}}
          </div>
        </div>
        <a href="#" class="btn-default btn1">
          view all
          <span class="fa fa-angle-right"></span>
        </a>
      </div>
    </div>
    <div class="col-lg-12 border-box">
      {{> "sponsors"}}
    </div>
  </div>
</div>
